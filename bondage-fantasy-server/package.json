{
  "name": "bondage-fantasy-server",
  "private": true,
  "type": "module",
  "files": [
    "build"
  ],
  "scripts": {
    "start": "node bin/server.js",
    "build": "node ace build",
    "dev": "node ace serve --hmr",
    "test": "node ace test",
    "lint": "eslint .",
    "format": "prettier --write .",
    "format-check": "prettier --check .",
    "typecheck": "tsc --noEmit",
    "docker": "docker build -t bondage-fantasy-server -f ./Dockerfile .."
  },
  "imports": {
    "#controllers/*": "./app/controllers/*.js",
    "#exceptions/*": "./app/exceptions/*.js",
    "#models/*": "./app/models/*.js",
    "#services/*": "./app/services/*.js",
    "#dao/*": "./app/dao/*.js",
    "#middleware/*": "./app/middleware/*.js",
    "#validators/*": "./app/validators/*.js",
    "#migration/*": "./app/migration/*.js",
    "#providers/*": "./providers/*.js",
    "#start/*": "./start/*.js",
    "#tests/*": "./tests/*.js",
    "#config/*": "./config/*.js"
  },
  "devDependencies": {
    "@adonisjs/assembler": "7.8.2",
    "@adonisjs/eslint-config": "2.0.0-beta.6",
    "@adonisjs/tsconfig": "1.4.0",
    "@japa/api-client": "2.0.4",
    "@japa/assert": "3.0.0",
    "@japa/plugin-adonisjs": "3.0.1",
    "@japa/runner": "3.1.4",
    "@swc/core": "1.9.3",
    "@types/mustache": "4.2.5",
    "@types/node": "22.10.0",
    "eslint": "9.15.0",
    "hot-hook": "0.4.0",
    "pino-pretty": "13.0.0",
    "prettier": "3.4.1",
    "ts-node-maintained": "10.9.4",
    "typescript": "5.7.2"
  },
  "dependencies": {
    "@adonisjs/auth": "9.2.4",
    "@adonisjs/core": "6.15.0",
    "@adonisjs/lock": "1.1.1",
    "@adonisjs/redis": "9.1.0",
    "@adonisjs/session": "7.5.0",
    "@adonisjs/shield": "8.1.1",
    "@vinejs/vine": "2.1.0",
    "bondage-fantasy-common": "workspace:*",
    "mongodb": "6.11.0",
    "mustache": "4.2.0",
    "reflect-metadata": "0.2.2"
  },
  "hotHook": {
    "boundaries": [
      "./app/controllers/**/*.ts",
      "./app/middleware/*.ts"
    ]
  }
}
