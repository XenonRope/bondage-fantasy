{
  "name": "bondage-fantasy-server",
  "private": true,
  "type": "module",
  "files": [
    "build"
  ],
  "scripts": {
    "start": "node bin/server.js",
    "build": "node ace build",
    "dev": "node ace serve --hmr",
    "test": "node ace test",
    "coverage": "c8 node ace test",
    "lint": "eslint .",
    "format": "prettier --write .",
    "format-check": "prettier --check .",
    "typecheck": "tsc --noEmit",
    "docker": "docker build -t bondage-fantasy-server -f ./Dockerfile ..",
    "check": "pnpm build && pnpm lint && pnpm format-check && pnpm test"
  },
  "imports": {
    "#controllers/*": "./app/controllers/*.js",
    "#exceptions/*": "./app/exceptions/*.js",
    "#models/*": "./app/models/*.js",
    "#services/*": "./app/services/*.js",
    "#dao/*": "./app/dao/*.js",
    "#middleware/*": "./app/middleware/*.js",
    "#validators/*": "./app/validators/*.js",
    "#migration/*": "./app/migration/*.js",
    "#providers/*": "./providers/*.js",
    "#start/*": "./start/*.js",
    "#tests/*": "./tests/*.js",
    "#config/*": "./config/*.js"
  },
  "dependencies": {
    "@adonisjs/auth": "9.3.2",
    "@adonisjs/core": "6.17.2",
    "@adonisjs/drive": "3.4.1",
    "@adonisjs/lock": "1.1.1",
    "@adonisjs/redis": "9.2.0",
    "@adonisjs/session": "7.5.1",
    "@adonisjs/shield": "8.2.0",
    "@aws-sdk/client-s3": "3.774.0",
    "@aws-sdk/s3-request-presigner": "3.774.0",
    "@opentelemetry/api": "1.9.0",
    "@opentelemetry/auto-instrumentations-node": "0.57.0",
    "@poppinss/utils": "6.9.2",
    "@vinejs/vine": "3.0.1",
    "bondage-fantasy-common": "workspace:*",
    "mongodb": "6.15.0",
    "mustache": "4.2.0",
    "reflect-metadata": "0.2.2"
  },
  "hotHook": {
    "boundaries": [
      "./app/controllers/**/*.ts",
      "./app/middleware/*.ts"
    ]
  }
}
